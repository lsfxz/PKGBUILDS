pkgname=neolayoutviewer-git
pkgver=r83.1c596d2
pkgrel=2
pkgdesc="On-Screen-Viewer for the Neo Layout"
arch=('x86_64' 'x86')
url="https://github.com/YggdrasiI/NeoLayoutViewer"
license=('GPL')
groups=()
depends=('vala' 'libgee' 'libunique3')
makedepends=('git') # 'bzr', 'git', 'mercurial' or 'subversion'
provides=("$pkgname")
conflicts=()
replaces=()
backup=()
options=()
install=
source=(git://github.com/YggdrasiI/NeoLayoutViewer
        neolayoutviewer.patch)
noextract=()
md5sums=('SKIP'
         '0984343fda9b218963ddc4ca04dbc7f5')
_gitname=NeoLayoutViewer
# Please refer to the 'USING git SOURCES' section of the PKGBUILD man page for
# a description of each element in the source array.

pkgver() {
	cd "$_gitname"

# The examples below are not absolute and need to be adapted to each repo. The
# primary goal is to generate version numbers that will increase according to
# pacman's version comparisons with later commits to the repo. The format
# VERSION='VER_NUM.rREV_NUM.HASH', or a relevant subset in case VER_NUM or HASH
# are not available, is recommended.

# Git, tags available
	# printf "%s" "$(git describe --long | sed 's/\([^-]*-\)g/r\1/;s/-/./g')"

# Git, no tags available
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
        cd "$_gitname"
        patch -Np1 < ../neolayoutviewer.patch
}

build() {
        cd "$_gitname"
	# cd "$_gitname"
	make PREFIX="$pkgdir/usr/"
}


package() {
        cd "$_gitname"
	# make DESTDIR="$pkgdir/" install
        make PREFIX="$pkgdir/usr/" install
}
